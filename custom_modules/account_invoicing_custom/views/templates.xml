<odoo>
    <data>
       <template id="report_invoice_document_custom" inherit_id="account.report_invoice_document">
           <xpath expr="//div[@class='row mt32 mb32']//div[1]" position="replace">
               <div class="col-xs-2">
                    <strong>Código Cliente:</strong>
                    <p t-field="o.partner_id.ref"/>
                </div>
           </xpath>
           
           <xpath expr="//div[@class='row mt32 mb32']//div[2]" position="replace">
               <div class="col-xs-2">
                    <strong>Fecha:</strong>
                    <p t-field="o.date_invoice"/>
                </div>
           </xpath>
           
           <xpath expr="//div[@class='row mt32 mb32']//div[3]" position="replace">
           </xpath>
           
           <!--<xpath expr="//div[@class='row mt32 mb32']//div[4]" position="replace">
           </xpath>
           
           <xpath expr="//div[@class='row mt32 mb32']//div[5]" position="replace">
           </xpath>-->
           
            <xpath expr="//table[@class='table table-condensed']//thead//tr" position="replace">
                <tr>
                    <th class="text-center">[Referecia]Descripción</th>
                    <th class="text-center">Lote</th>
                    <th class="text-center">Cantidad</th>
                    <th class="text-center">Precio unitario</th>
                    <th t-if="display_discount" class="text-center">Dto(%)</th>
                    <th class="text-center">Importe</th>
                </tr>
            </xpath>
           
            <xpath expr="//tbody[@class='invoice_tbody']//tr//td[1]" position="replace">
                <td><span t-field="l.product_id"/></td>
            </xpath>
           
            <xpath expr="//tbody[@class='invoice_tbody']//tr//td[2]" position="replace">
                <td><span t-field="l.product_id"/></td>
            </xpath>
           
            <xpath expr="//tbody[@class='invoice_tbody']//tr//td[6]" position="replace">  
            </xpath>
           
            <xpath expr="//div[@class='clearfix']//div[1]" position="after">
                 <div class="col-xs-2">
                     <strong>Fecha Vencimiento:</strong>
                     <p t-field="o.date_due"/>
                 </div>
                 <div class="col-xs-2">
                     <strong>Forma de Pago:</strong>
                     <p t-field="o.partner_id.property_payment_term_id"/>
                 </div>
                 <div class="col-xs-2">
                     <strong>Datos Bancarios:</strong>
                     <p>0000000 BANCO XXX</p>
                 </div>
            </xpath>
           
        </template>
    </data>
</odoo>